{% extends 'front/base_front.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
            <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-6">
                Bienvenue sur
                <span class="text-gray-600">
                    Hollywood Paris
                </span>
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-10">
                Votre studio photo professionnel au coeur de Paris
            </p>
            <div class="flex justify-center gap-4">
                <a href="{{ path('app_front_gallery_index') }}" class="bg-gray-900 hover:bg-gray-800 text-white font-semibold px-8 py-3 rounded-lg shadow-lg transition-all">
                    Voir les galleries
                </a>
                <button class="border border-gray-300 text-gray-700 font-semibold px-8 py-3 rounded-lg hover:bg-gray-50 transition-all">
                    En savoir plus
                </button>
            </div>
        </div>
    </div>

    <!-- Features Cards -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
        <div class="grid md:grid-cols-3 gap-8">
            <!-- Card 1 -->
            <div class="bg-white rounded-2xl p-6 border border-gray-200 hover:border-gray-300 transition-all hover:-translate-y-1 shadow-sm">
                <div class="w-12 h-12 bg-gray-900 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Rapide</h3>
                <p class="text-gray-600">Des shootings professionnels avec des rendus rapides.</p>
            </div>

            <!-- Card 2 -->
            <div class="bg-white rounded-2xl p-6 border border-gray-200 hover:border-gray-300 transition-all hover:-translate-y-1 shadow-sm">
                <div class="w-12 h-12 bg-gray-900 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Personnalisable</h3>
                <p class="text-gray-600">Chaque shooting est unique et adapté à vos besoins.</p>
            </div>

            <!-- Card 3 -->
            <div class="bg-white rounded-2xl p-6 border border-gray-200 hover:border-gray-300 transition-all hover:-translate-y-1 shadow-sm">
                <div class="w-12 h-12 bg-gray-900 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Professionnel</h3>
                <p class="text-gray-600">Une équipe expérimentée à votre service.</p>
            </div>
        </div>
    </div>
{% endblock %}
