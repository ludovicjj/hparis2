{% extends 'front/base_front.html.twig' %}

{% block title %}{{ gallery.title }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('front_gallery') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('front_gallery') }}
{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Header -->
        <div class="mb-8">
            <a href="{{ path('app_front_gallery_index') }}" class="inline-flex items-center text-gray-600 hover:text-gray-900 transition mb-4">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Retour aux galleries
            </a>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{{ gallery.title }}</h1>
            {% if gallery.description %}
                <p class="text-gray-600 text-lg">{{ gallery.description }}</p>
            {% endif %}
            <p class="text-gray-500 mt-2">{{ totalPictures }} photo(s)</p>
        </div>

        <!-- Pictures Grid -->
        <div
            id="pictures-grid"
            class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
            data-api-url="{{ path('app_front_gallery_pictures', {id: gallery.id}) }}"
            data-initial-offset="{{ pictures|length }}"
            data-has-more="{{ hasMore ? 'true' : 'false' }}"
        >
            {% for picture in pictures %}
                <a href="{{ picture.path }}" class="glightbox aspect-square rounded-lg overflow-hidden bg-gray-100 block">
                    <img
                        src="{{ picture.thumbnailPath }}"
                        alt="{{ picture.originalName }}"
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 cursor-pointer"
                        loading="lazy"
                    >
                </a>
            {% endfor %}
        </div>

        <!-- Loading indicator -->
        {% if hasMore %}
            <div id="loading-indicator" class="flex justify-center py-8">
                <div class="flex items-center space-x-2 text-gray-500">
                    <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Chargement...</span>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
