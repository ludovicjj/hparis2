{% extends 'admin/admin_layout.html.twig' %}

{% block title %}Galeries - {{ parent() }}{% endblock %}

{% block page_title %}Galeries{% endblock %}

{% block content %}
    <div class="mb-6 flex justify-between items-center">
        <p class="text-slate-400">{{ galleries|length }} galerie(s)</p>
        <a href="{{ path('app_admin_gallery_create') }}"
           class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nouvelle galerie
        </a>
    </div>

    {% if galleries is empty %}
        <div class="bg-slate-900 rounded-xl p-12 border border-slate-700 text-center">
            <svg class="w-16 h-16 mx-auto text-slate-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="text-slate-400 mb-4">Aucune galerie pour le moment</p>
            <a href="{{ path('app_admin_gallery_create') }}"
               class="inline-flex items-center text-purple-400 hover:text-purple-300 transition">
                Créer votre première galerie
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    {% else %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for item in galleries %}
                {% set gallery = item[0] %}
                {% set picturesCount = item.picturesCount %}
                <div class="bg-slate-900 rounded-xl border border-slate-700 overflow-hidden hover:border-slate-600 transition">
                    <!-- Thumbnail -->
                    <div class="aspect-video bg-slate-800 relative">
                        {% if gallery.thumbnail %}
                            <img src="{{ gallery.thumbnail.path }}" alt="{{ gallery.title }}" class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center">
                                <svg class="w-12 h-12 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </div>
                        {% endif %}
                        <div class="absolute bottom-2 right-2 bg-black/50 text-white text-xs px-2 py-1 rounded">
                            {{ picturesCount }} image(s)
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-white mb-1">{{ gallery.title }}</h3>
                        {% if gallery.description %}
                            <p class="text-slate-400 text-sm mb-3 line-clamp-2">{{ gallery.description }}</p>
                        {% endif %}
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-slate-500">{{ gallery.createdAt|date('d/m/Y') }}</span>
                            <div class="flex space-x-2">
                                <a href="{{ path('app_admin_gallery_update', {id: gallery.id}) }}"
                                   class="text-purple-400 hover:text-purple-300 transition">
                                    Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
