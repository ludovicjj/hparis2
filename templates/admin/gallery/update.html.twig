{% extends 'admin/admin_layout.html.twig' %}

{% block title %}Modifier {{ gallery.title }} - {{ parent() }}{% endblock %}

{% block page_title %}Modifier la galerie{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin_gallery') }}
{% endblock %}

{% block content %}
    <div class="w-full">
        <div class="bg-slate-900 rounded-xl p-6 border border-slate-700 mb-6">
            <h2 class="text-lg font-semibold text-white mb-4">Lien</h2>
            <div class="flex gap-2">
                <div class="flex-1 px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white truncate" id="gallery-url">
                    {{ front_gallery_url }}
                </div>
                <button type="button"
                        id="copy-url-btn"
                        class="px-4 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    <span id="copy-url-text">Copier</span>
                </button>
                {% if not gallery.visibility %}
                    <button type="button"
                            id="reset-token-btn"
                            data-url="{{ path('app_admin_gallery_token', {id: gallery.id}) }}"
                            class="px-4 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition flex items-center gap-2"
                            title="Régénérer le token (invalidera l'ancien lien)">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        <span id="reset-token-text">Régénérer</span>
                    </button>
                {% endif %}
            </div>
        </div>

        {{ form_start(form) }}
        <div class="bg-slate-900 rounded-xl p-6 border border-slate-700 mb-6">
            {# Container for : Title + Description + Thumnail #}
            <div class="flex flex-col md:flex-row gap-6">
                {# Title et Description #}
                <div class="flex-1 space-y-6">
                    <div>
                        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div>
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition resize-none h-[166px]'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    {# Visibility Switch #}
                    <div class="flex items-center gap-4">
                        <span class="text-sm font-medium text-slate-300">{{ form_label(form.visibility, 'Gallerie public', {'label_attr': {'class': 'text-sm font-medium text-slate-300'}}) }}</span>
                        <label class="relative inline-flex items-center cursor-pointer">
                            {{ form_widget(form.visibility, {'attr': {'class': 'sr-only peer'}}) }}
                            <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                        </label>
                    </div>
                </div>

                {# Thumbnail #}
                <div class="w-full md:w-96">
                    {# Thumbnail - label #}
                    {{ form_label(form.thumbnailFile, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}

                    <div class="relative">
                        {# Thumbnail - Field #}
                        {{ form_widget(form.thumbnailFile, {'attr': {'class': 'hidden', 'accept': 'image/jpeg,image/png'}}) }}

                        {# Thumbnail - Dropzone #}
                        <div id="thumbnail-dropzone"
                             class="flex items-center justify-center border-2 border-dashed border-slate-600 rounded-lg p-6 text-center
                          hover:border-purple-500 transition cursor-pointer min-h-[267px]"
                        >
                            {% if gallery.thumbnail %}
                                <div id="thumbnail-preview">
                                    <img id="thumbnail-img" src="{{ gallery.thumbnail.path }}" alt="Aperçu" class="max-h-48 mx-auto rounded-lg mb-2">
                                    <p class="text-slate-400 text-sm">Cliquez pour changer l'image</p>
                                </div>
                                <div id="thumbnail-placeholder" class="hidden">
                                    <svg class="w-12 h-12 mx-auto text-slate-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    <p class="text-slate-400">Cliquez pour sélectionner une image</p>
                                    <p class="text-slate-500 text-sm mt-1">JPG ou PNG, max 5 Mo</p>
                                </div>
                            {% else %}
                                <div id="thumbnail-preview" class="hidden">
                                    <img id="thumbnail-img" src="" alt="Aperçu" class="max-h-48 mx-auto rounded-lg mb-2">
                                    <p class="text-slate-400 text-sm">Cliquez pour changer l'image</p>
                                </div>
                                <div id="thumbnail-placeholder">
                                    <svg class="w-12 h-12 mx-auto text-slate-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    <p class="text-slate-400">Cliquez pour sélectionner une image</p>
                                    <p class="text-slate-500 text-sm mt-1">JPG ou PNG, max 5 Mo</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    {{ form_errors(form.thumbnailFile) }}
                </div>
            </div>

            {# Form action #}
            <div class="flex items-center justify-between pt-6">
                <a href="{{ path('app_admin_gallery_index') }}" class="text-slate-400 hover:text-white transition">
                    &larr; Retour aux galeries
                </a>
                <button type="submit"
                        id="submit-btn"
                        class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-lg transition disabled:opacity-50 disabled:cursor-not-allowed">
                    Enregistrer
                </button>
            </div>
        </div>

        {# Pictures Container #}
        <div class="bg-slate-900 rounded-xl p-6 border border-slate-700 mb-6">
            <h2 class="text-lg font-semibold text-white mb-4">Images ({{ pictures|length }})</h2>

            {# Picture Dropzone #}
            <div id="pictures-dropzone"
                 class="border-2 border-dashed border-slate-600 rounded-lg p-8 text-center hover:border-purple-500 transition cursor-pointer mb-6"
                 data-upload-url="{{ path('app_admin_gallery_add_picture', {id: gallery.id}) }}">
                <svg class="w-12 h-12 mx-auto text-slate-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <p class="text-slate-400 mb-1">Glissez-déposez vos images ici</p>
                <p class="text-slate-500 text-sm">ou cliquez pour sélectionner</p>
            </div>
            <input type="file" id="pictures-input" accept="image/jpeg,image/png" multiple class="hidden">

            {# Progress bar #}
            <div id="upload-progress" class="hidden mb-6">
                <div class="flex justify-between text-sm text-slate-400 mb-1">
                    <span id="upload-status">Upload en cours...</span>
                    <span id="upload-count">0/0</span>
                </div>
                <div class="w-full bg-slate-700 rounded-full h-2">
                    <div id="upload-bar" class="bg-purple-600 h-2 rounded-full transition-all" style="width: 0"></div>
                </div>
            </div>

            {# Grid des images #}
            <div id="pictures-grid" class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                {% for picture in pictures %}
                    <div class="relative group aspect-square picture-item" data-picture-id="{{ picture.id }}">
                        <img src="{{ picture.thumbnailPath }}" alt="{{ picture.originalName }}" class="w-full h-full object-cover rounded-lg">
                        <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition rounded-lg flex items-center justify-center">
                            <button type="button"
                                    class="btn-delete-picture bg-red-600 hover:bg-red-700 text-white p-2 rounded-lg transition"
                                    data-picture-id="{{ picture.id }}">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Hidden field pour stocker les IDs des pictures #}
            <input type="hidden" id="picture-ids" name="picture_ids" value="{{ pictureIds|join(',') }}">
        </div>
        {{ form_end(form) }}

        {# Danger zone #}
        <div class="bg-slate-900 rounded-xl p-6 border border-red-900/50">
            <h2 class="text-lg font-semibold text-red-400 mb-4">Zone de danger</h2>
            <form action="{{ path('app_admin_gallery_delete', {id: gallery.id}) }}" method="post"
                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette galerie ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gallery.id) }}">
                <button type="submit"
                        class="bg-red-600/20 hover:bg-red-600 text-red-400 hover:text-white px-4 py-2 rounded-lg transition border border-red-600">
                    Supprimer la galerie
                </button>
            </form>
        </div>
    </div>
{% endblock %}
