{% extends 'admin/admin_layout.html.twig' %}

{% block title %}Nouvelle galerie - {{ parent() }}{% endblock %}

{% block page_title %}Nouvelle galerie{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin_gallery') }}
{% endblock %}

{% block content %}
    <div class="w-full">
        {{ form_start(form) }}
        <div class="bg-slate-900 rounded-xl p-6 border border-slate-700 mb-6">
            <div class="flex flex-col md:flex-row gap-6">
                {# Title et Description #}
                <div class="flex-1 space-y-6">
                    <div>
                        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div>
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition resize-none h-[166px]'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    {# Visibility Switch #}
                    <div class="flex items-center gap-4">
                        <span class="text-sm font-medium text-slate-300">{{ form_label(form.visibility, 'Gallerie public', {'label_attr': {'class': 'text-sm font-medium text-slate-300'}}) }}</span>
                        <label class="relative inline-flex items-center cursor-pointer">
                            {{ form_widget(form.visibility, {'attr': {'class': 'sr-only peer'}}) }}
                            <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                        </label>
                    </div>
                </div>

                {# Thumbnail #}
                <div class="w-full md:w-96">
                    {# Thumbnail - label #}
                    {{ form_label(form.thumbnailFile, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                    <div class="relative">
                        {# Thumbnail - Field #}
                        {{ form_widget(form.thumbnailFile, {'attr': {'class': 'hidden', 'accept': 'image/jpeg,image/png'}}) }}

                        {# Thumbnail - Dropzone #}
                        <div id="thumbnail-dropzone"
                              class="flex items-center justify-center border-2 border-dashed border-slate-600 rounded-lg p-6 text-center
                               hover:border-purple-500 transition cursor-pointer min-h-[267px]"
                        >
                            <div id="thumbnail-preview" class="hidden">
                                <img id="thumbnail-img" src="" alt="Aperçu" class="max-h-48 mx-auto rounded-lg mb-2">
                                <p class="text-slate-400 text-sm">Cliquez pour changer l'image</p>
                            </div>
                            <div id="thumbnail-placeholder">
                                <svg class="w-12 h-12 mx-auto text-slate-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                <p class="text-slate-400">Cliquez pour sélectionner une image</p>
                                <p class="text-slate-500 text-sm mt-1">JPG ou PNG, max 5 Mo</p>
                            </div>
                        </div>
                    </div>
                    {{ form_errors(form.thumbnailFile) }}
                </div>
            </div>

            {# Form action #}
            <div class="flex items-center justify-between pt-6">
                <a href="{{ path('app_admin_gallery_index') }}" class="text-slate-400 hover:text-white transition">
                    &larr; Retour aux galeries
                </a>
                <button type="submit"
                        class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-lg transition">
                    Créer la galerie
                </button>
            </div>
        </div>

        {# Info : ajout des photos après création #}
        <div class="bg-slate-800/50 rounded-xl p-6 border border-slate-600 mb-6">
            <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                    <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-medium text-white mb-2">Et les photos ?</h3>
                    <p class="text-slate-300">
                        Vous pourrez ajouter vos photos juste après avoir cliqué sur <strong class="text-purple-400">"Créer la galerie"</strong>.
                    </p>
                    <p class="text-slate-400 text-sm mt-2">
                        Commencez par remplir le titre et choisir une image de couverture ci-dessus.
                    </p>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
